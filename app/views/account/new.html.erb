<% title_tag t("common.register") %>

<body class="signup-page">
  <div class="signup-box">
    <div class="logo">
      <h2 align="center"><%= Setting.app_name %></h2>
      <small><%= Setting.app_slogan %></small>
    </div>

    <div class="card">
      <div class="body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
          <div class="msg"><%= t("common.register") %></div>
          <div class="input-group">
            <span class="input-group-addon"><i class="material-icons">person</i></span>
            <div class="form-line">
              <%= f.input_field :name, placeholder: t("common.username"), autofocus: true %>
            </div>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="material-icons">email</i></span>
            <div class="form-line">
              <%= f.input_field :email, placeholder: t("common.email"), autofocus: true %>
            </div>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="material-icons">lock</i></span>
            <div class="form-line">
              <%= f.input_field :password, type: :password, placeholder: t("common.password") %>
            </div>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="material-icons">lock</i></span>
            <div class="form-line">
              <%= f.input_field :password_confirmation, type: :password, placeholder: t("common.confirm_password") %>
            </div>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="material-icons">accessibility</i></span>
            <div class="form-line">
              <%= rucaptcha_input_tag(class: 'form-control', placeholder: t("common.captcha")) %>
            </div>
          </div>

          <div class="input-group">
            <span class="input-group-addon input-group-captcha"><a class="rucaptcha-image-box" href="#"><%= rucaptcha_image_tag %></a></span>
          </div>

          <%= f.submit t("common.register"), class: "btn btn-block btn-lg bg-pink waves-effect", disable_with: t("common.registering")%>
        <% end %>

        <div class="m-t-25 m-b--5 align-center">
          <%= link_to t("common.login"), user_session_path, "data-turbolinks": false %>
        </div>
      </div> 
    </div>
  </div>
</div>
