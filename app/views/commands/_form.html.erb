<%= simple_form_for(@command, remote: true, html: {id: "form_validation"}) do |f| %>
  <%= f.input :content, label: '指令内容', wrapper: :form_float_required %>
  <%= f.input :use_for, label: '指令用途', wrapper: :form_float_required %>
  <label for="command_labels">指令标签</label>
  <%= f.input :labels, wrapper: :vertical_tag %>
  <%= f.button :submit, '提交', class: 'btn btn-block btn-lg btn-primary waves-effect' %>
<% end %>